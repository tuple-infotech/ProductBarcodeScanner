    <!--region Circle Styles-->

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>

    <style name="circlefullImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="circlefilterview">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="round_img_layout">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/style_bg_round</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">@dimen/dp_10</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

