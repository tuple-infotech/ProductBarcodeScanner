<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--region EditText Styles-->

    //EditText Style

    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:background">@drawable/style_bg_edit_text</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="paddingStart">@dimen/dp_8</item>
        <item name="elevation">@dimen/dp_5</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="height">48dp</item>
    </style>

    //EditText Style

    <style name="EditTextStyleWithoutBG">
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="paddingStart">@dimen/dp_8</item>
        <item name="elevation">@dimen/dp_5</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="height">48dp</item>
    </style>

    //EditText line_box Style

    <style name="EditTextStyle.line_box">
        <item name="android:background">@drawable/style_bg_edit_text</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    //EditText alert Style

    <style name="EditTextStyle.alert">
        <item name="android:background">@drawable/style_bg_edit_text</item>
        <item name="backgroundTint">#FEB47E</item>
    </style>

    //EditText alert Style Blue

    <style name="EditTextStyle.alert.dim_orange">
        <item name="android:background">@drawable/style_bg_edit_text</item>
        <item name="backgroundTint">@color/custom_action_bar_orange</item>
    </style>

    <!--endregion EditText Styles-->

    //Button Style

    //Button Orange BG
    <style name="ButtonStyle.Orange">
        <item name="android:background">@drawable/style_btn_orange</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
    </style>

    //Button Orange BG
    <style name="ButtonStyle.DimOrange">
        <item name="android:background">@drawable/style_bg_edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
    </style>

    //Button Corner
    <style name="ButtonStyle.Corner">
        <item name="android:textColor">@color/orange</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:background">@drawable/style_bg_edit_text</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
    </style>

    //Button Simple Style
    <style name="ButtonStyle.Details">
        <item name="android:background">@drawable/style_bg_edit_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    //Button Segment Corner
    <style name="ButtonStyle.segmentCorner">
        <item name="android:padding">@dimen/dp_2</item>
        <item name="android:background">@drawable/style_bg_edit_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
    
    //Button Red
    <style name="ButtonStyle.Red">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/style_btn_red</item>
        <item name="android:layout_width">150dp</item>
    </style>

    //Button Green
    <style name="ButtonStyle.Green">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/style_btn_green</item>
        <item name="android:layout_width">150dp</item>
    </style>


