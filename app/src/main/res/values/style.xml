    <style name="Dialog_Box_Style">
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:background">@drawable/style_bg_edit_text</item>

    </style>

    <style name="TextInputLayout">
        <item name="android:textStyle">normal</item>
        <item name="singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/dp_30</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="startIconMinSize">@dimen/dp_8</item>
        <item name="hintTextColor">@color/text_color</item>
        <item name="startIconTint">@color/text_color</item>
