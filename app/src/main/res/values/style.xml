        <item name="startIconTint">@color/text_color</item>
        <item name="boxStrokeColor">@color/text_color</item>
        <item name="cursorColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="helperText">""</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="helperTextEnabled">true</item>
        <item name="boxBackgroundMode">filled</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingStart">@dimen/dp_0</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextInputEditText.otptext">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="android:autofillHints">1</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:selectAllOnFocus">true</item>
