<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/style_bg_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_first"
                style="@style/TextView.TextView_14_SP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_bg_top_left_curved"
                android:backgroundTint="@color/orange"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:text="Sr. No"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/firstview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/firstview"
                android:layout_width="@dimen/dp_2"
                android:layout_height="0dp"
                android:background="@color/gray_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_fourth"
                app:layout_constraintStart_toEndOf="@+id/tv_first"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_fourth"
                style="@style/TextView.TextView_14_SP"
                android:layout_width="0dp"
                android:background="@color/orange"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:text="qty"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/thirdview"
                app:layout_constraintStart_toEndOf="@+id/firstview"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/thirdview"
                android:layout_width="@dimen/dp_2"
                android:layout_height="0dp"
                android:background="@color/gray_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_last"
                app:layout_constraintStart_toEndOf="@+id/tv_fourth"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_last"
                style="@style/TextView.TextView_14_SP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_bg_top_right_curved"
                android:backgroundTint="@color/orange"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:text="Action"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/thirdview"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_list_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:splitMotionEvents="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerRow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>