<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ProductManufactureFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_nsv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnCl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_barcode"
                style="@style/TextInputLayout.blackcolor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Barcode"
                app:layout_constraintEnd_toStartOf="@+id/scan_btn"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_workshop">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBox_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="50" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/scan_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHorizontal_weight="0.3"
                android:layout_marginEnd="4dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_search_btn"
                app:layout_constraintBottom_toBottomOf="@+id/input_layout_barcode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/input_layout_barcode"
                app:layout_constraintTop_toTopOf="@+id/input_layout_barcode" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_design_name"
                style="@style/TextInputLayout.blackcolor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Enter Design Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_barcode">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBox_design_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="false"
                    android:background="@color/white"
                    android:inputType="text"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/input_layout_workshop"
                style="@style/TextInputLayout.blackcolor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/style_bg_edit_text"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:text="Workshop"
                android:padding="@dimen/dp_8"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/input_layout_component"
                style="@style/TextInputLayout.blackcolor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/style_bg_edit_text"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:text="Components"
                android:padding="@dimen/dp_8"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_design_name" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_component_qty"
                style="@style/TextInputLayout.blackcolor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintHorizontal_weight="1"
                android:hint="Component Qty"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/add_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_component">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_box_component_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:inputType="number"
                    android:maxLength="3"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_btn"
                style="@style/ButtonStyle.Green"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintHorizontal_weight="0.4"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Add"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/input_layout_component_qty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/input_layout_component_qty"
                app:layout_constraintTop_toTopOf="@+id/input_layout_component_qty" />

            <include
                android:id="@+id/recyclerview_details"
                layout="@layout/layout_items_manufacturetableview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_component_qty" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_show_details"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/style_bg_edit_text"
            android:backgroundTint="@color/orange"
            android:padding="@dimen/dp_0"
            android:text="Show Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_save" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/style_bg_edit_text"
            android:backgroundTint="@color/btn_green"
            android:padding="@dimen/dp_0"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/style_bg_edit_text"
            android:backgroundTint="@color/btn_red"
            android:padding="@dimen/dp_0"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/btn_show_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_show_details"
            app:layout_constraintTop_toTopOf="@+id/btn_show_details" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>